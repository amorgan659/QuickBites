<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBEFA6"
    android:padding="16dp">

    <!-- Vertical LinearLayout to contain recipe cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Preferences Button -->
        <Button
            android:id="@+id/preference_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#234320"
            android:padding="12dp"
            android:text="@string/preference_btn"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <!-- Recipe Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/gluten_free"
                    android:layout_width="241dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/gluten_free"
                    android:textColor="#404040"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/view_asian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#234320"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    android:text="@string/view_recipe"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recipe Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/asian_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/asian_food"
                    android:textColor="#404040"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/view_gf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#234320"
                    android:text="@string/view_recipe"
                    android:textColor="#FFFFFF"
                    android:padding="8dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recipe Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/keto_diet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/keto_diet"
                    android:textColor="#404040"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/view_keto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#234320"
                    android:text="@string/view_recipe"
                    android:textColor="#FFFFFF"
                    android:padding="8dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recipe Card 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/sweet_treat"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/sweet_treat"
                    android:textColor="#404040"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/view_sweet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#234320"
                    android:text="@string/view_recipe"
                    android:textColor="#FFFFFF"
                    android:padding="8dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
